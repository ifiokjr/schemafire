{
  "packages": ["@schemafire/*", "support/dependencies", "support/jest-mocks", "examples/*"],
  "publish": {},
  "command": {
    "publish": {
      "message": "chore(release): publish %s",
      "registry": "https://registry.npmjs.org/",
      "npmClient": "npm",
      "signGitCommit": true,
      "signGitTag": true,
      "allowBranch": ["master"]
    }
  },
  "version": "independent",
  "npmClient": "yarn",
  "registry": "https://registry.npmjs.org/",
  "useWorkspaces": true,
  "npmClientArgs": ["--no-lockfile"],
  "ignoreChanges": [
    "examples/**",
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/__stories__/**",
    "**/*.md"
  ]
}
