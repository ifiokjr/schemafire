{
  "extends": ["@kj/tslint-rules/base"],
  "rules": {
    "no-implicit-dependencies": [
      true,
      "dev",
      [
        "@schemafire/jest-mocks",
        "@google-cloud/firestore",
        "@live-test-helpers",
        "@unit-test-helpers",
        "@firebase/testing",
        "p-retry"
      ]
    ],
    "no-any": false,
    "max-classes-per-file": false,
    "no-empty-interface": false,
    "no-console": false,
    "no-parameter-reassignment": false
  }
}
