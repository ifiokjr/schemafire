{
  "name": "@skeema/core",
  "publishConfig": {
    "access": "public"
  },
  "description": "Models and interfaces shared throughout the skeema definitions",
  "author": "Ifiok Jr. <ifiokotung@gmail.com>",
  "repository": "https://github.com/ifiokjr/skeema/tree/master/@packages/core",
  "version": "0.0.0",
  "main": "lib/index.js",
  "files": [
    "lib",
    "src"
  ],
  "license": "MIT",
  "scripts": {
    "prebuild": "run-s clean lint",
    "build": "run-s build:declaration build:babel",
    "build:babel": "babel src --out-dir lib --extensions \".ts\" --source-maps",
    "build:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --declarationMap",
    "clean": "rimraf lib",
    "dev": "run-p watch:*",
    "lint": "tslint --project tsconfig.json --config ../../tslint.json",
    "test": "jest",
    "test:live": "cross-env TEST_ENV=live jest",
    "typecheck": "tsc -p ./tsconfig.json --noEmit",
    "watch:babel": "babel src --out-dir lib --extensions \".ts\" --watch",
    "watch:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --declarationMap --watch"
  },
  "dependencies": {
    "@types/validator": "10.9.0",
    "io-ts": "1.6.4",
    "io-ts-reporters": "0.0.21",
    "io-ts-types": "0.4.0",
    "lodash": "4.17.11",
    "validator": "10.11.0",
    "nanoid": "2.0.1"
  },
  "peerDependencies": {
    "@google-cloud/firestore": "^0.21.0",
    "firebase-admin": "^6.5.0",
    "firebase-functions": "^2.1.0"
  }
}
